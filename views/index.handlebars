<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">S2k Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/saved">Saved Articles</a>
            <button type="button" class="btn btn-primary" id="scraper">Scrape S2ki</button>
        </div>
    </div>
</nav>

<div class="jumbotron text-center">
    <h1 class="display-4">S2k Scraper</h1>
    <p class="lead">Scrape the most recent Honda S2000 articles from S2ki</p>
</div>

<div class="container">
    <div class="row">
        {{#each articles}}
        <div class="col-md-4">
            <div class="card mb-4" style="width: 18rem">
                <img src={{img}} class="card-img-top" alt={{title}}>
                <div class="card-body">
                    <h5 class="card-title">{{ title }}</h5>
                    <p class="card-text">{{date}}</p>
                    <p class="card-text">{{summary}}</p>
                    <a href={{link}} class="btn btn-primary mb-1">Read Full Article</a>
                    <button type="button" class="btn btn-primary saveArticle" data-id="{{_id}}">Save Article</button>
                    <button type="button" data-toggle="modal" data-target="#{{_id}}"
                        class="btn btn-primary">Comment</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{#each articles}}
<!-- Modal -->
<div class="modal fade" id="{{_id}}" tabindex="-1" role="dialog" aria-labelledby="Title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Title">Notes for article id: {{_id}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{!-- {{#each comment}}
                <div>

                </div>
                {{/each}} --}}
                <form>
                    <div class="form-group">
                        <label for="comment{{_id}}">Comment</label>
                        <textarea class="form-control" id="comment{{_id}}" rows="3"></textarea>
                    </div>
                    <button type="button" class="btn btn-primary submitComment" data-id="{{_id}}">Submit
                        Comment</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{{/each}}